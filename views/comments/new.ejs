<%-include('../partials/header')%>

<div class="container">
  <div >
    <h1 style="text-align:center">Add New Comment to <%=campground.name%></h1>
    <div class="frm">
      <form action="/campground/<%=campground.id%>/comments" method="POST">
        <div class="form-group"><input class="form-control" type="text" placeholder="text" name="comment[text]"></div>
        <div class="form-group"><input class="form-control" type="text" placeholder="author" name="comment[author]"></div>
        <div class="form-group"><button class="btn btn-large btn-primary btn-block">Submit</button></div>
      </form>
      <a href="/campground">Back to campground</a>
    </div>
  </div>
</div>
