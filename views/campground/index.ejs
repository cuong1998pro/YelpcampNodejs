<%- include ('../partials/header')%>

<div class="container">

  <header class="jumbotron">
    <div class="container">
      <h1>This is the campground page</h1>
      <p>View our hand-picked camgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-large" href="/campground/new">Create new Campground</a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Our Most Popular Campground</h3>
    </div>
  </div>

  <div class="row text-center">
    <%campground.forEach(function(item){%>
    <div class="col-md-3 col-sm-6 col-xs-12">
      <div class="thumbnail">
        <img src="<%=item.img %>"/>
        <div class="caption">
          <h4><%=item.name%></h4>
          <a href="/campground/<%=item._id%>" class="btn btn-primary">More Info</a>
        </div>
      </div>
    </div>
    <%});%>
  </div>
</div>


<%-include ('../partials/footer')%>
