<%-include('../partials/header')%>

<div class="container">
  <div >
    <h1 style="text-align:center">Edit new campground</h1>
    <div class="frm">
      <form action="/campground/<%=campground.id%>?_method=PUT" method="POST">
        <div class="form-group"><input class="form-control" type="text" placeholder="name" value="<%=campground.name%>" name="campground[name]"></div>
        <div class="form-group"><input class="form-control"  value="<%=campground.img%>" type="text" placeholder="image url" name="campground[url]"></div>
        <div class="form-group"><button class="btn btn-large btn-primary btn-block">Submit</button></div>
      </form>
      <a href="/campground">Back to campground</a>

    </div>
  </div>
</div>
<%-include('../partials/footer.ejs')%>
