<%-include('../partials/header')%>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <div class="list-group-item active" >Info 1</div>
        <div class="list-group-item">Info 2</div>
        <div class="list-group-item">Info 3</div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail" style='height: auto'>
        <img class="img-responsive" src="<%=campground.img%>">
        <div class="caption-full">
          <h4 class="pull-right">$9.00/night</h4>
          <h4>
            <a href=""><%=campground.name%></a>
          </h4>
          <p><%=campground.description%></p>
          <a class="btn btn-warning" href="/campground/<%=campground._id%>/edit">Edit</a>
          <form id="delete-form" action="/campground/<%=campground.id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>

      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/campground/<%=campground._id%>/comments/new">Add New Comment</a>
        </div>
        <hr>
        <%campground.comments.forEach(function(comment){%>
        <div class="row">
          <div class="col-md-12">
            <strong><%=comment.author.username%></strong>
            <span class="pull-right">
              10 days ago
            </span>
            <p>
              <%=comment.text%>
              <a href="/campground/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
              <form id="delete-form" action="/campground/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
              </form>
            </p>
          </div>
        </div>
        <%});%>
      </div>
    </div>
  </div>
</div>


<p>
</p>



<%-include('../partials/footer')%>
